---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
  key-duplicates: enable
  line-length: disable
  new-lines: disable
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  truthy: disable
